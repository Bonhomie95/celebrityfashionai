# --------------------------------------------------
# APP
# --------------------------------------------------
APP_NAME=celebrity-fashion-ai
ENV=development
LOG_LEVEL=INFO

# --------------------------------------------------
# VIDEO
# --------------------------------------------------
MAX_VIDEO_DURATION_SEC=90
FRAME_SAMPLE_RATE=5
MIN_VIDEO_RESOLUTION=720

# --------------------------------------------------
# YOLO
# --------------------------------------------------
YOLO_MODEL_PATH=models/yolo/weights/yolov8-fashion.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
YOLO_IOU_THRESHOLD=0.45

# --------------------------------------------------
# PRICE ESTIMATION
# --------------------------------------------------
PRICE_CONFIDENCE_MIN=0.6
ENABLE_WEB_LOOKUP=false

# --------------------------------------------------
# OPTIONAL SEARCH API
# (Only needed if ENABLE_WEB_LOOKUP=true)
# --------------------------------------------------
BING_SEARCH_API_KEY=
BING_SEARCH_ENDPOINT=https://api.bing.microsoft.com/v7.0/images/search

# --------------------------------------------------
# VIDEO RENDERING
# --------------------------------------------------
VIDEO_CODEC=libx264
VIDEO_BITRATE=6M
TEXT_FONT=assets/fonts/Inter-Bold.ttf
